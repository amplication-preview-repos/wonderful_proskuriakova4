datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Teacher {
  assignedClass String?
  contactNumber String?
  createdAt     DateTime @default(now())
  email         String?
  emailAddress  String?
  fullName      String?
  id            String   @id @default(cuid())
  name          String?
  phoneNumber   String?
  updatedAt     DateTime @updatedAt
}

model Student {
  address     String?
  createdAt   DateTime  @default(now())
  dateOfBirth DateTime?
  id          String    @id @default(cuid())
  name        String?
  parent      Parent?   @relation(fields: [parentId], references: [id])
  parentId    String?
  updatedAt   DateTime  @updatedAt
}

model Parent {
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  name      String?
  phone     String?
  students  Student[]
  updatedAt DateTime  @updatedAt
}

model Staff {
  assignedGroup String?
  contactNumber String?
  createdAt     DateTime @default(now())
  emailAddress  String?
  fullName      String?
  id            String   @id @default(cuid())
  updatedAt     DateTime @updatedAt
}
